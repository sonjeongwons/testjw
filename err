func (i Item) String() string {
	switch {
	case i.Typ == EOF:
		return "EOF"
	case i.Typ == ERROR:
		return i.Val
	case i.Typ.IsKeyword(), i.Typ.IsOperator(), i.Typ.IsAggregator():
		return fmt.Sprintf("<%s:%s>", i.Typ.desc(), i.Val)
	case i.Typ == IDENTIFIER || i.Typ == METRIC_IDENTIFIER:
		return fmt.Sprintf("%q", i.Val)
	case len(i.Val) > 10:
		return fmt.Sprintf("%.10q...", i.Val)
	default:
		return fmt.Sprintf("%q", i.Val)
	}
}